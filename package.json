{
  "name": "impress.js",
  "version": "0.5.3",
  "description": "\"Fork of impress.js to add testing\"",
  "main": "index.html",
  "scripts": {
    "test": "karma start",
    "clean": "rm -rf dist && mkdir -p dist/js",
    "browserify": "browserify ./src/js/core.js > ./dist/js/impress.js",
    "build:js": "npm run browserify",
    "build:css": "cp -R ./src/css ./dist/",
    "build:html": "cp ./src/*.html ./dist/",
    "build": "npm run clean && npm run build:html && npm run build:css && npm run build:js",
    "prebuild": "npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mr-rampage/impress.js.git"
  },
  "keywords": [
    "impress.js",
    "fork"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mr-rampage/impress.js/issues"
  },
  "homepage": "https://github.com/mr-rampage/impress.js#readme",
  "devDependencies": {
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "browserify": "latest",
    "karma-jasmine": "latest",
    "karma-browserify": "latest",
    "karma-phantomjs-launcher": "latest"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  }
}
